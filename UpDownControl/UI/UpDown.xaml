<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpDownControl.UI.UpDown">
    <Frame Padding="1" CornerRadius="6" BorderColor="Black">
        <Grid Padding="0" HorizontalOptions="Center" x:Name="GridLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
            <ImageButton Grid.Column="0" x:Name="DownButton" Source="chevron_left" BackgroundColor="White" CornerRadius="4"></ImageButton>
            <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Column="1" x:Name="ValueLabel"/>
            <ImageButton Grid.Column="2" x:Name="UpButton" Source="chevron_right" BackgroundColor="White" CornerRadius="4"></ImageButton>
        </Grid>
    </Frame>
</ContentView>