<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpDownControl.UI.UpDown">
    <Frame x:Name="FrameLayout" Padding="0" CornerRadius="2" BorderColor="Black">
        <Grid Padding="0" HorizontalOptions="Center" x:Name="GridLayout">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
            <ImageButton Grid.Column="0" x:Name="DownButton" Source="chevron_left" BackgroundColor="Gray"></ImageButton>
            <Label Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" x:Name="ValueLabel"/>
            <ImageButton Grid.Column="2" x:Name="UpButton" Source="chevron_right" BackgroundColor="Gray"></ImageButton>
        </Grid>
    </Frame>
</ContentView>