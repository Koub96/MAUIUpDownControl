<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ui="clr-namespace:UpDownControl.UI;assembly=UpDownControl"
             x:Class="Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Margin="200"
            Padding="30,0"
            Spacing="25">
            <ui:UpDown x:Name="UpDownControl" FontSize="30" TextColor="Red" BackgroundColor="Blue" CornerRadius="6" BorderColor="Red" InitialValue="4" Step="0.44" DownButtonImage="dotnet_bot.png" WidthRequest="85" HeightRequest="30"></ui:UpDown>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
